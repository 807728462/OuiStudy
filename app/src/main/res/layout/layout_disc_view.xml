<?xml version="1.0" encoding="utf-8"?>
<com.oyf.codecollection.palymusic.DiscView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/iv_backgroud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <com.oyf.codecollection.palymusic.MusicViewFlipper
        android:id="@+id/mvf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_needle"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_needle" />
</com.oyf.codecollection.palymusic.DiscView>